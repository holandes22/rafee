[program:celerybeat]
command={{ virtualenv_path }}/bin/celery beat -A {{ project.name }} --schedule={{ project_celery_conf_path}}/celerybeat-schedule --loglevel=INFO 

project_celery_conf_pathenvironment=PYTHONPATH={{ project.root }},DJANGO_SETTINGS_MODULE={{ django.settings_module }}
directory={{ project_celery_conf_path }}
pidfile={{ project_celery_conf_path }}/celerybeat.pid
user={{ project.user }}
numprocs=1
stdout_logfile=/var/log/celery/beat.log
stderr_logfile=/var/log/celery/beat.log
autostart=true
autorestart=true
startsecs=10

; if redis is supervised, set its priority higher
; so it starts first
priority=999
