<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <legend>Select a slideshow</legend>
      <form class="form-inline" role="form">
        <div class="form-group">
          {{view "select"
                 content=model
                 optionValuePath="content.id"
                 optionLabelPath="content.name"
                 selection=selectedSlideshow
                 classNames="form-control"}}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Go!</button>
        </div>
      </form>
      <br/>
      {{#if selectedSlideshow}}
        <h4>Template names in slideshow: {{selectedSlideshow.name}}</h4>
        <table class="table table-condensed table-striped">
          <thead>
            <tr>
              <th>Position</th>
              <th>Template name</th>
            </tr>
          </thead>
          <tbody>
            {{#each selectedSlideshow.templateNames}}
              <tr>
                <td>{{_view.contentIndex}}</td>
                <td>{{this}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
  </div>
</div>
