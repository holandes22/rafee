<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div class="input-group input-group-sm">
        {{input type="text" value=searchText placeholder="Search..." class="form-control"}}
        <span class="input-group-addon"><span class="glyphicon glyphicon-search"</span></span>
      </div>
    </div>
    <div class="col-md-2">
      {{link-to 'Preview' 'templates.preview' class='btn btn-primary btn-sm'}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-7">
      {{#if model}}
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Data source URL</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each}}
              <tr>
                <td>{{name}}</td>
                <td>{{#if dataSourceUrl}}<a href="{{dataSourceUrl}}">{{dataSourceUrl}}</a>{{else}}None{{/if}}</td>
                <td>
                  {{#link-to "templates.render" title="Render"}}
                    <span class="glyphicon glyphicon-eye-open"></span>
                  {{/link-to}}
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>
    <div class="col-md-5 details-pane">
      {{outlet}}
    </div>
  </div>
</div>
