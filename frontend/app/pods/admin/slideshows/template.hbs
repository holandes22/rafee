<div class="row">
  <div class="small-4 columns">
    {{link-to "Add" "admin.slideshows.add" class='button'}}
  </div>
</div>
{{#if model}}
<div class="row">
  <div class="small-5 columns">
    {{#each model as |slideshow|}}
      <div class="row">
        <div class="small-8 columns">
          {{link-to slideshow.name "admin.slideshows.slideshow" slideshow title="Details" class="button secondary small expand"}}
        </div>
        <div class="small-4 columns">
          <ul class="button-group">
            <li>
              {{#link-to "admin.slideshows.slideshow.edit" slideshow title="Edit" class="button small"}}
                <i class="fi-pencil"></i>
              {{/link-to}}
            </li>
            <li>
            {{delete-confirmation resource=slideshow}}
            </li>
          </ul>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="small-7 columns">
    {{outlet}}
  </div>
</div>
{{/if}}
