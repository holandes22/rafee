<div class="row">
  <div class="small-3 small-centered columns">
    <h3 class="text-center">Enter your credentials</h3>
  </div>
</div>

<div class="row">
  <div class="small-3 small-centered columns">
    <form class="form-signin" role="form" {{action "authenticate" on="submit"}}>
      {{input id="identification" value=identification class="form-control login-username" placeholder="Username"}}
      {{input id="password" type="password" value=password class="form-control login-password" placeholder="Password"}}
      <button type="submit" class="expand" {{bind-attr disabled=disabled}}>Sign in</button>
    </form>
  </div>
</div>

{{#if loginFailure}}
<div class="row">
  <div class="small-3 small-centered columns">
    <div data-alert class="alert-box alert text-center">
      <strong>Login failure: </strong><p id="loginFailureMessage">{{ errorMessage }}</p>
    </div>
  </div>
</div>
{{/if}}
