<h2 id='title'>Rafee Login</h2>

<form class="form-signin" role="form" {{action "authenticate" on="submit"}}>
  {{input id="identification" value=identification class="form-control login-username" placeholder="Username"}}
  {{input id="password" type="password" value=password class="form-control login-password" placeholder="Password"}}
  <button type="submit" class="btn btn-lg btn-primary btn-block" {{bind-attr disabled=disabled}}>Sign in</button>
</form>

{{#if loginFailure}}
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <strong>Login failure: </strong> {{ errorMessage }}
  </div>
{{/if}}
